<Window x:Class="QModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QModManager"
        mc:Ignorable="d"
        Title="QModManager for Subnautica" Height="540" Width="960">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <ToggleButton x:Name="buttonInjectorToggle" HorizontalAlignment="Right" Width="150" Margin="10" Checked="buttonInjectorToggle_Checked" Unchecked="buttonInjectorToggle_Unchecked" />

        <DataGrid x:Name="dataGridSettings" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Setting" Binding="{Binding Name}" Width="1*" IsReadOnly="True" CanUserResize="False" CanUserReorder="False" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="1*" IsReadOnly="False" CanUserResize="False" CanUserReorder="False" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*" IsReadOnly="True" CanUserResize="False" CanUserReorder="False" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
